{
    "name": "jitesoft/wp-dbal",
    "description": "A project intended to abstract the database layer of the WordPress CMS and allow for the developer to use a more Entity based development.",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Tegner",
            "email": "johannes@jitesoft.com"
        }
    ],
    "require": {
        "nesbot/carbon": "^1.30",
        "jitesoft/exceptions": "^2.2",
        "doctrine/annotations": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Jitesoft\\WordPress\\DBAL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jitesoft\\WordPress\\DBAL\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3"
    }
}
